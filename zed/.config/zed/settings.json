// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `zed: Open Default Settings` command
// from the command palette
{
  // File syntax highlighting
  "ssh_connections": [
    {
      "host": "myvps",
      "args": [],
      "projects": [
        {
          "paths": ["/home/hamid/taskmindBackend"]
        }
      ]
    }
  ],
  "agent_ui_font_size": 13.0,
  "agent_buffer_font_size": 11.0,
  "project_panel": {
    "entry_spacing": "comfortable"
  },
  "title_bar": {
    "show_menus": false
  },
  "ui_font_weight": 430.0,
  "ui_font_family": "Adwaita Sans",
  "show_edit_predictions": true,
  "edit_predictions": {
    "disabled_globs": [],
    "mode": "eager"
  },
  "search": {
    "button": false
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "icon_theme": "Catppuccin Frapp√©",
  "file_types": {
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "JSON": ["json", "*.code-snippets"],
    "JSONC": ["jsonc"]
  },
  "auto_install_extensions": {
    "html": true,
    "toml": true,
    "basher": true,
    "emmet": true,
    "make": true,
    "sql": true,
    "csv": true,
    "env": true,
    "ruff": true,
    "svelte": true,
    "git-firefly": true,
    "rainbow-csv": true,
    "scss": true,
    "catppuccin-icons": true
  },
  "minimap": {
    "show": "always"
  },
  "soft_wrap": "editor_width",
  "languages": {
    "Markdown": {
      "show_edit_predictions": true
    },
    "Go": {
      "show_edit_predictions": true
    },
    "C++": {
      "show_edit_predictions": true
    },
    "JSONC": {
      "show_edit_predictions": true
    },
    "C": {
      "show_edit_predictions": true
    },
    // "Python": {
    //   "show_edit_predictions": true,
    //   "format_on_save": "on",
    //   "formatter": "auto",
    //   "language_servers": ["ruff", "pyright"]
    // },
    "Python": {
      "show_edit_predictions": true
    },
    "HTML": {
      "show_edit_predictions": true
    },
    "TypeScript": {
      "show_edit_predictions": true,
      "inlay_hints": {
        "show_parameter_hints": false,
        "show_type_hints": false,
        "show_value_hints": false,
        "show_other_hints": false
      },
      "format_on_save": "on",
      "formatter": "auto",
      "language_servers": ["typescript-language-server"]
    },
    "JavaScript": {
      "show_edit_predictions": true,
      "inlay_hints": {
        "show_parameter_hints": false,
        "show_type_hints": false
      }
    }
  },
  // Use zed commit editor
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font"
  },
  "inlay_hints": {
    "enabled": true
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "relative_line_numbers": "enabled",
  "cursor_blink": true,
  "vertical_scroll_margin": 0,
  "tab_bar": {
    "show_nav_history_buttons": true
  },
  "toolbar": {
    "breadcrumbs": true
  },
  "agent": {
    "play_sound_when_agent_done": true,
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gpt-5"
    },
    "always_allow_tool_actions": true,
    "profiles": {
      "test": {
        "name": "test",
        "tools": {
          "fetch": true,
          "copy_path": true,
          "find_path": true,
          "grep": true,
          "list_directory": true,
          "read_file": true
        },
        "enable_all_context_servers": false,
        "context_servers": {}
      }
    },
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-opus-4.5"
    },
    "dock": "right"
  },
  "agent_servers": {
    "OpenCode": {
      "type": "custom",
      "command": "opencode",
      "args": ["acp"]
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  "ui_font_size": 13.0,
  "buffer_font_size": 10.7,
  "buffer_font_family": "CaskaydiaMono Nerd Font",
  "theme": "Omarchy Current",
  "tabs": {
    "git_status": true,
    "file_icons": true,
    "close_position": "right"
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "format_on_save": "on",
  "lsp": {
    "ruff": {
      "settings": {
        "organizeImports": true,
        "lineLength": 140,
        "fixAll": true
      }
    },
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace"
        }
      }
    }
  }
}

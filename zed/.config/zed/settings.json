// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `zed: Open Default Settings` command
// from the command palette
{
  // File syntax highlighting
  "show_edit_predictions": true,
  "edit_predictions": {
    "disabled_globs": [],
    "mode": "eager"
  },
  "search": {
    "button": false
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "icon_theme": "Catppuccin Frapp√©",
  "file_types": {
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "JSON": ["json", "jsonc", "*.code-snippets"]
  },
  "auto_install_extensions": {
    "html": true,
    "basher": true,
    "emmet": true,
    "make": true,
    "sql": true,
    "blackula": true,
    "csv": true,
    "env": true,
    "java": true,
    "ruff": true,
    "svelte": true,
    "deno": true,
    "git-firefly": true,
    "rainbow-csv": true,
    "scss": true,
    "tokyo-night": true
  },
  "minimap": {
    "show": "always"
  },
  "soft_wrap": "editor_width",
  "languages": {
    "Markdown": {
      "show_edit_predictions": true
    },
    "Go": {
      "show_edit_predictions": true
    },
    "C++": {
      "show_edit_predictions": false
    },
    "JSONC": {
      "show_edit_predictions": true
    },
    "C": {
      "show_edit_predictions": true
    },
    // "Python": {
    //   "show_edit_predictions": true,
    //   "format_on_save": "on",
    //   "formatter": "auto",
    //   "language_servers": ["ruff", "pyright"]
    // },
    "Python": {
      "show_edit_predictions": false,
      "language_servers": ["ruff", "pyright"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    },
    "HTML": {
      "show_edit_predictions": true
    },
    "TypeScript": {
      "show_edit_predictions": true,
      "inlay_hints": {
        "show_parameter_hints": false,
        "show_type_hints": false
      },
      "format_on_save": "on",
      "formatter": "auto",
      "language_servers": ["deno", "typescript-language-server"]
    },
    "JavaScript": {
      "show_edit_predictions": false,
      "inlay_hints": {
        "show_parameter_hints": false,
        "show_type_hints": false
      }
    }
  },
  // Use zed commit editor
  "terminal": {
    "env": {
      "EDITOR": "zed --wait"
    },
    // "cursor_shape":"bar",
    "font_family": "JetBrainsMono Nerd Font"
  },
  "inlay_hints": {
    "enabled": true
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "relative_line_numbers": true,
  "cursor_blink": false,
  "vertical_scroll_margin": 0,
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "toolbar": {
    "breadcrumbs": true
  },
  "agent": {
    "play_sound_when_agent_done": true,
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    },
    "always_allow_tool_actions": true,
    "profiles": {
      "test": {
        "name": "test",
        "tools": {
          "fetch": true,
          "copy_path": true,
          "find_path": true,
          "grep": true,
          "list_directory": true,
          "read_file": true
        },
        "enable_all_context_servers": false,
        "context_servers": {}
      }
    },
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "dock": "right"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  "ui_font_size": 14,
  "buffer_font_size": 13.0,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte (Blur)",
    "dark": "One Dark Pro"
  },
  "tabs": {
    "git_status": true,
    "file_icons": true,
    "close_position": "right"
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "format_on_save": "on",
  "lsp": {
    "ruff": {
      "settings": {
        "organizeImports": true,
        "lineLength": 140,
        "fixAll": true
      }
    },
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace"
        }
      }
    }
  }
}

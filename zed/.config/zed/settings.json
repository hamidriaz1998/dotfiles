{
  // === Remote Development ===
  "agent_servers": {
    "opencode": {
      "type": "custom",
      "command": "/usr/bin/opencode acp",
    },
  },
  "ssh_connections": [
    {
      "host": "myvps",
      "projects": [{ "paths": ["/home/hamid/taskmindBackend"] }],
    },
  ],

  // === Appearance ===
  "theme": "Omarchy Current",
  "icon_theme": "Catppuccin Frapp√©",
  "ui_font_family": "Adwaita Sans",
  "ui_font_size": 13,
  "ui_font_weight": 430,
  "buffer_font_family": "CaskaydiaMono Nerd Font",
  "buffer_font_size": 11,
  "title_bar": { "show_menus": false },
  "minimap": { "show": "auto" },
  "project_panel": { "entry_spacing": "comfortable" },
  "tabs": { "git_status": true, "file_icons": true },

  // === Git ===
  "git": { "inline_blame": { "enabled": true } },

  // === File Finder ===
  "file_finder": { "modal_max_width": "large" },

  // === Editor Behavior ===
  "vim_mode": true,
  "relative_line_numbers": "enabled",
  "soft_wrap": "editor_width",
  "vertical_scroll_margin": 5,
  "autosave": { "after_delay": { "milliseconds": 1000 } },
  "format_on_save": "on",
  "indent_guides": { "enabled": true, "coloring": "indent_aware" },

  // === AI & Edit Predictions ===
  "show_edit_predictions": true,
  "edit_predictions": { "provider": "mercury", "mode": "eager" },
  "agent": {
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gpt-5-mini"
    },
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5.3-codex",
    },
    "favorite_models": [],
    "default_profile": "ask",
    "model_parameters": [],
  },
  "agent_ui_font_size": 13,
  "agent_buffer_font_size": 11,
  "context_servers": {},

  // === Terminal ===
  "terminal": { "font_family": "JetBrainsMono Nerd Font" },

  // === Language-Specific ===
  "languages": {
    "C": { "show_edit_predictions": true },
    "Python": { "language_servers": ["ty", "ruff"], "inlay_hints": {"show_type_hints": false} },
    "TypeScript": { "inlay_hints": { "enabled": false } },
    "JavaScript": { "inlay_hints": { "enabled": false } },
    "CSharp": { "language_servers": ["omnisharp"] },
  },

  // === LSP Configuration ===
  "inlay_hints": { "enabled": true },
  "lsp": {
    "ruff": {
      "settings": {
        "organizeImports": true,
        "lineLength": 140,
        "fixAll": true,
      },
    },
    "omnisharp": {
      "binary": {
        "path": "/home/hamid/.local/bin/omnisharp-dotnet",
        "arguments": ["-lsp"],
      },
    },
  },

  // === File Associations ===
  "file_types": {
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "JSON": ["json", "*.code-snippets"],
  },

  // === Extensions ===
  "auto_install_extensions": {
    "html": true,
    "toml": true,
    "basher": true,
    "emmet": true,
    "make": true,
    "sql": true,
    "csv": true,
    "env": true,
    "ruff": true,
    "svelte": true,
    "git-firefly": true,
    "rainbow-csv": true,
    "scss": true,
    "catppuccin-icons": true,
  },

  // === Privacy ===
  "telemetry": { "diagnostics": false, "metrics": false },
}
